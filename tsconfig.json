{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/helpers/*": ["src/helpers/*"],
      "@/styles/*": ["src/styles/*"]
    }
  }
}
